<h2>New post:</h2>

<form class="form-horizontal" action="/new" method="POST">
  <div class="form-group">
    <label for="inputname" class="col-sm-1 control-label">Name</label>
    <div class="col-sm-11">
      <input type="text" class="form-control" name="name" id="inputname" placeholder="Name">
    </div>
  </div>
  <div class="form-group">
    <label for="inputpost" class="col-sm-1 control-label">Post</label>
    <div class="col-sm-11">
      <textarea class="form-control" name="message" id="inputpost" placeholder="Message" rows="3"></textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <button type="submit" class="btn btn-primary btn-lg">Send</button>
    </div>
  </div>
</form>